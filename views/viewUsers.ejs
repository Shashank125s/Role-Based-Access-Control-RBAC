<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

    <div class="min-h-screen p-10">
        <h1 class="text-4xl font-bold mb-6 text-green-400 text-center">All Users and Moderators</h1>
        
        <table class="table-auto w-full text-left bg-gray-700 text-white rounded-lg shadow-md">
            <thead class="bg-gray-600">
                <tr>
                    <th class="px-4 py-2">Username</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Role</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr class="border-t border-gray-600">
                        <td class="px-4 py-2"><%= user.username %></td>
                        <td class="px-4 py-2"><%= user.email %></td>
                        <td class="px-4 py-2"><%= user.role %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="mt-6 text-center">
            <a href="/adminResource" class="inline-block px-6 py-3 bg-blue-500 rounded-md text-white font-medium hover:bg-blue-600 transition-all">Back to Admin Dashboard</a>
        </div>
    </div>

</body>
</html>
